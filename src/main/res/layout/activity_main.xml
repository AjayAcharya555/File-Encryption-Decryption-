<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/image_choose"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_chooseimage"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:text="Choose Image"
            android:textColor="#fff"
            android:textAllCaps="false" />

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_horizontal">

    <Button
        android:id="@+id/btn_encrypt"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:text="Encrypt" />

    <Button
        android:id="@+id/btn_decrypt"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:layout_toEndOf="@id/btn_encrypt"
        android:text="Decrypt" />

    <TextView
        android:id="@+id/click_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_decrypt"
        android:layout_marginTop="30dp"
        android:text="Click the below button to upload file to ASW S3">

    </TextView>

    <Button
        android:id="@+id/click_to_aws"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/click_button"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:text="Click here">

    </Button>
</RelativeLayout>

    </LinearLayout>


</RelativeLayout>